# Copy to .env and fill with environment-specific values. Keep the file out of Git.

# --- General network settings ---
OVPN_BACKHAUL_GATEWAY="10.255.0.1"           # backhaul tunnel gateway reachable from macOS
OVPN_SELF_TUN_IP="10.8.0.5"                  # this host's /32 inside the user VPN

# --- SSH / cloud status ---
OVPN_CLOUD_HOST="vpn-cloud.example.com"      # SSH hostname of the cloud server
OVPN_CLOUD_USER="ubuntu"                     # SSH user
OVPN_SSH_KEY_PATH="$HOME/.ssh/openvpn-sync"  # private key used for automation scripts
OVPN_SSH_HOST_ALIAS="vpn-cloud"              # optional SSH config alias used by macOS scripts
OVPN_SSH_STRICT_HOSTKEY="accept-new"         # StrictHostKeyChecking policy

# Paths to OpenVPN status files on the cloud host
OVPN_CLOUD_STATUS_PATH="/home/ubuntu/openvpn/openvpn-status.log"
OVPN_CLOUD_STATUS_BACKHAUL_PATH="/home/ubuntu/openvpn/openvpn-status-backhaul.log"

# --- macOS local paths ---
OVPN_ROUTE_APPLY="/opt/homebrew/etc/openvpn/scripts/route-apply-mac.sh"
OVPN_LAN_STATUS_FILE="/opt/homebrew/var/log/openvpn-lan.status"
OVPN_CONNECT_SELF_IP="10.8.0.5"               # utun address owned by OpenVPN Connect (if used)

# --- Cloud -> mac sync (learn-address hook) ---
OVPN_MAC_SYNC_USER="vpn-sync"                 # SSH user on macOS gateway
OVPN_MAC_SSH_KEY="/data/keys/sync_cloud_ed25519"   # private key path on cloud host
OVPN_MAC_BACKHAUL_HOST="10.255.0.2"          # macOS gateway via backhaul tunnel
OVPN_MAC_FALLBACK_HOST="10.8.0.5"            # fallback address (user VPN)
OVPN_MAC_ROUTE_APPLY="/opt/homebrew/etc/openvpn/scripts/route-apply-mac.sh"

# --- Optional logging overrides ---
# OVPN_BACKHAUL_SYNC_LOG="/var/log/openvpn-backhaul-sync.log"
# OVPN_CONNECT_SYNC_LOG="/var/log/openvpn-connect-route.log"
# OVPN_BACKHAUL_FLUSH_LOG="/var/log/openvpn-flush-local32.log"
# OVPN_CLOUD_ROUTE_LOG="/data/route-sync-cloud.log"

